---
const { text = "Aceptar", isRounded = false } = Astro.props;
---

<button
    class:list={[
        " bg-blue-400",
        "hover:bg-blue-500",
        "transition-colors",
        "leading-3",
        "text-white",
        "px-2",
        "py-1",
        "pt-1",
        "pb-2",
        { rounded: isRounded },
    ]}
>
    {text}
</button>
