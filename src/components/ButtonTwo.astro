---
const { isRounded = false } = Astro.props;
---

<button
    class:list={[
        " bg-blue-400",
        "hover:bg-blue-500",
        "transition-colors",
        "leading-3",
        "text-white",
        "px-2",
        "py-1",
        "pt-1",
        "pb-2",
        { rounded: isRounded },
    ]}

    class="flex items-center h-10 "
>
    <slot name = "text"/>
    <div class=" bg-red-400 text-white rounded-full p-1 ml-2 size-6 flex items-center justify-center">
        <slot name = "icon"/>
    </div>
</button>